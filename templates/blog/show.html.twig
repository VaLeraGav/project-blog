{% extends 'layout.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            {% if blog.category %}
            <tr>
                <th>Category</th>
                <td>{{ blog.category.fullName }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Text</th>
                <td>{{ blog.text }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blog_index') }}"><button class="btn btn-success">back to list</button></a>

    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}">edit</a>

    <form method="post" action="{{ path('app_blog_delete', {'id': blog.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
        <button class="btn">Delete</button>
    </form>

{% endblock %}
